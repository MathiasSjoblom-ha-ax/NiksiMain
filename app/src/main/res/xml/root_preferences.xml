<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/Preferences_header">

        <EditTextPreference
            app:key="Author"
            app:title="@string/author_setting"
            app:useSimpleSummaryProvider="true" />

        <ListPreference
            app:key="Reply"
            app:defaultValue="0"
            app:entries="@array/spinnerItems"
            app:entryValues="@array/spinnerItems"
            app:title="@string/spinner_title"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

</PreferenceScreen>